
    <section class="poodllclassroom_current_subscription"> 
        <h2>My Poodll Account</h2>
            {{> block_poodllclassroom/dashboardsidenavigation}}
        <div class="poodll_dashboard_heading_block">
            <h3 id="my-school-details">My School Details</h3>
            <!--
            {{#hassubs}}
            <div class="sub_checkoutbutton poodll-change-circle-icon">{{> block_poodllclassroom/changeplanlinkbutton}}</div>
            {{/hassubs}}
            {{^hassubs}}
            <div class="sub_checkoutbutton poodll-plus-circle-icon">{{> block_poodllclassroom/checkoutpagelinkbutton}}</div>
            {{/hassubs}}
            -->
        </div>
        <!--p>You do not have any current Poodll for Moodle subscriptions. Click the Add new subscription button to add one.</p>
        <div class="sub_checkoutbutton poodll-plus-icon">{{> block_poodllclassroom/checkoutpagebutton}}</div-->
    </section>

    <section class="poodllclassroom_subscription_details"> 
        <div id="block_poodllclassroom_moodlesubslist_cont"  class="block_poodllclassroom block_poodllclassroom_moodlesubslist_cont poodleclassblock" style="display: {{display}};">

    
        {{#hassubs}}{{/hassubs}}
        {{^hassubs}} <div class="subs_desciption">{{#str}}moodlesubs_none, block_poodllclassroom{{/str}}<br></div>{{/hassubs}} 

        {{#hassubs}}
            <div class="school_name_container">
                <div class="school_name_normal_state">
                    <div class="school_name_normal_state_container">
                        <div class="school_name_icon"></div>
                        <div class="school_name_info">
                            <div class="current_subscription_label">School Name</div>
                            <div class="current_subscription_text">{{school.name}}</div>
                        </div>
                        <div class="school_name_edit_button" id="school_name_edit">Edit</div>
                    </div>
                </div>
                <div class="school_name_editing_state hidden">
                    <div class="school_name_editing_state_container">
                        <div class="school_name_icon"></div>
                        <form class="school_name_form_container">
                            <div class="school_name_form">
                                <label for="school_name" class="current_subscription_label">School Name</div>
                                <input id="school_name" class="school_name_input" placeholder="{{school.name}}">
                            </div>
                            <input type="submit" id="school_name_save" class="btn btn-primary" value="Save" />
                        </form>
                    </div>
                </div>
            </div>

            <div class="school_urls_container">
                <div class="school_urls_content">
                    <div class="school_urls_icon"></div>
                    <div class="school_name_info">
                        <div class="current_subscription_label">School URLs</div>
                        {{#school.siteurls }}
                            <div class="current_subscription_text">{{.}}</div>
                        {{/school.siteurls}}
                    </div>
                    <a class="school_name_add_button" href="{{{editschoolurl}}}">{{#str}}editsitedetails, block_poodllclassroom{{/str}}</a>
                       
                </div>
                <div class="help_tooltip">
                    <div class="help_tooltip_arrow"></div>
                    <div class="help_tooltip_body">
                        <p>The adress/es of your Moodle campus. You can have up to 5 different urls.</p>
                    </div>
                </div>
            </div>   

            <div class="poodll_dashboard_heading_block">
                <h3 id="my-api-and-secret-key">My API and Secret Key</h3>
            </div>
            <div class="school_api_and_secret_container">
                <div class="school_api_and_secret_wrapper">
                    <div class="school_api">
                        <div class="school_api_icon"></div>
                        <div class="school_api_info">
                            <div class="current_subscription_label">User API</div>
                            <div class="current_subscription_text" id="apiuser_{{school.id}}" data-clipboard-text="{{school.apiuser}}">{{school.apiuser}}</div>
                        </div>
                        <div class="school_api_copy_button">
                            <a class="btn btn-secondary poodllclassroom_clipboardbutton" data-clipboard-action="copy" data-clipboard-target="#apiuser_{{school.id}}"></a>
                            <div class="bpc_col-4 bpc_copied" style="display: none">{{#str}}copied, block_poodllclassroom{{/str}}</div>
                        </div>
                    </div>
                    <div class="school_secret">
                        <div class="school_secret_icon"></div>
                        <div class="school_secret_info">
                            <div class="current_subscription_label">Secret Key</div>
                            <div class="current_subscription_text" id="apisecret_{{school.id}}" data-clipboard-text="{{school.apisecret}}">{{school.apisecret}}</div>
                        </div>
                        <div class="school_secret_copy_button">
                            <a class="btn btn-secondary poodllclassroom_clipboardbutton" data-clipboard-action="copy" data-clipboard-target="#apisecret_{{school.id}}"></a>
                            <div class="bpc_col-4 bpc_copied" style="display: none">{{#str}}copied, block_poodllclassroom{{/str}}</div>
                        </div>
                    </div>
                </div>  
                <div class="help_tooltip">
                    <div class="help_tooltip_arrow"></div>
                    <div class="help_tooltip_body">
                        <p>Copy and paste those on your Moodle campus to connect your Poodll account.</p>
                        {{> block_poodllclassroom/subscriptioninfo }}
                    </div>
                </div>  
            </div>

        <!--
            <div class="sub_checkoutbutton poodll-change-icon">{{> block_poodllclassroom/changeplanpagebutton}}</div>
        {{/hassubs}}
        {{^hassubs}} 
            <div class="sub_checkoutbutton poodll-change-icon">{{> block_poodllclassroom/checkoutpagebutton}}</div>
        {{/hassubs}} 
        -->
 
   
 

    </section>

    {{#hassubs}}
        <section class="poodllclassroom_usage_report">
            <div class="poodll_dashboard_heading_block">
                <h3 id="usage-report">Usage Report</h3>
            </div> 
            <div class="block_poodllclassroom_usagereport">
                {{{usagereport}}}
            </div>
        </section>
    {{/hassubs}}
    
</section>
    {{#js}}
        $(document).ready(function() {
            $("#school_name_edit").click(function() {
                $(".school_name_normal_state").addClass("hidden");
                $(".school_name_editing_state").removeClass("hidden");
            });
            $("#school_name_save").click(function() {
                event.preventDefault(); /* RS - Temporary */
                $(".school_name_editing_state").addClass("hidden");
                $(".school_name_normal_state").removeClass("hidden");
            });
            
        });
    {{/js}}