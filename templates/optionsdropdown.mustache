{{!
    @template block_poodllclassroom/optionsdropdown

    This template renders the options dropdown

    Example context (json):
    {}
}}
<section class="main_page_sections" data-spy="scroll" data-target="#dashboard-side-navigation" data-offset="0">
    <section class="poodllclassroom_payment_methods">
        <div class="poodll_dashboard_heading_block">
            <h3 id="billing">Billing</h3>
        </div>
        <div class="subsection-element subsection-billing-details">
            <div class="subsection-element-icon"></div>
            <div class="subsection-element-content">
                <h5>{{#str}}billingdetails, block_poodllclassroom{{/str}}</h5>
                <p>{{#str}}billingdetails_desc, block_poodllclassroom{{/str}}</p>
                {{> block_poodllclassroom/billingaccountbutton}}
            </div>
        </div>
        <div class="subsection-element subsection-billing-history">
            <div class="subsection-element-icon"></div>
            <div class="subsection-element-content">
                <h5>{{#str}}billinghistory, block_poodllclassroom{{/str}}</h5>
                <p>{{#str}}billinghistory_desc, block_poodllclassroom{{/str}}</p>
                {{> block_poodllclassroom/billinghistorybutton}}
            </div>
        </div>
        <div class="subsection-element subsection-payment-methods">
            <div class="subsection-element-icon"></div>
            <div class="subsection-element-content">
                <h5>{{#str}}paymentmethods, block_poodllclassroom{{/str}}</h5>
                <p>{{#str}}paymentmethods_desc, block_poodllclassroom{{/str}}</p>
                {{> block_poodllclassroom/paymentmethodbutton}}
            </div>
        </div>                

    </section>