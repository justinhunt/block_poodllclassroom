{{!
    @template block_poodllclassroom/optionsdropdown

    This template renders the options dropdown

    Example context (json):
    {}
}}
<div class="dropdown">
    <button type="button" class="btn btn-outline-secondary dropdown-toggle icon-no-margin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            aria-label="{{#str}} poodllclassroomoptions, block_poodllclassroom {{/str}}" aria-controls="poodllclassroomoptions">
        {{#pix}} i/duration {{/pix}}
    </button>
    <div id="poodllclassroomoptions" role="menu" class="dropdown-menu">
        {{#options}}
        <a
            class="dropdown-item"
            href="{{{url}}}"
            aria-label="{{label}}"
            role="menuitem"
        >
            {{label}}
        </a>
        {{/options}}
    </div>
</div>
