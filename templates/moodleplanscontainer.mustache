<div class="block_poodllclassroom_togglediv"><a href="#" class="btn btn-secondary togglelink">300 <---> 600</a></div>

<div class="main-pack">
    <div class="plan-pack mediaplans">
        <div class="plan-pack-inner">
            <h4>{{#str}}mediaplans, block_poodllclassroom{{/str}}</h4>
            {{#mediaplans}}
                <h6 class="block_poodllclassroom_prices {{display}}">US${{price}}</h6>
            {{/mediaplans}}

        </div>
        <div id="block_poodllclassroom_mediaplans_cont" class="block_poodllclassroom_moodleplans_cont center block_poodllclassroom_flexbox">
            {{#mediaplans}}
                <div class="block_poodllclassroom_cbbuttons {{display}}">
                    {{#checkoutexisting}}
                        {{> block_poodllclassroom/upgradetile}}
                    {{/checkoutexisting}}
                    {{^checkoutexisting}}
                        {{> block_poodllclassroom/newplantile}}
                    {{/checkoutexisting}}
                </div>
            {{/mediaplans}}
        </div>
    </div>
    <div class="plan-pack langplans">
        <div class="plan-pack-inner">
            <h4>{{#str}}langplans, block_poodllclassroom{{/str}}</h4>
            {{#langplans}}
                <h6 class="block_poodllclassroom_prices {{display}}">US${{price}}</h6>
            {{/langplans}}

        </div>
        <div id="block_poodllclassroom_langplans_cont" class="block_poodllclassroom_moodleplans_cont center block_poodllclassroom_flexbox">
            {{#langplans}}
                 <div class="block_poodllclassroom_cbbuttons {{display}}">
                    {{#checkoutexisting}}
                        {{> block_poodllclassroom/upgradetile}}
                    {{/checkoutexisting}}
                    {{^checkoutexisting}}
                        {{> block_poodllclassroom/newplantile}}
                    {{/checkoutexisting}}
                 </div>
            {{/langplans}}
        </div>
    </div>
    <div class="plan-pack essentialsplans">
        <div class="plan-pack-inner">
            <h4>{{#str}}essentialsplans, block_poodllclassroom{{/str}}</h4>
            {{#essentialsplans}}
                <h6 class="block_poodllclassroom_prices {{display}}">US${{price}}</h6>
            {{/essentialsplans}}

        </div>
        <div id="block_poodllclassroom_essentialsplans_cont" class="block_poodllclassroom_moodleplans_cont center block_poodllclassroom_flexbox">
            {{#essentialsplans}}
                <div class="block_poodllclassroom_cbbuttons {{display}}">
                    {{#checkoutexisting}}
                        {{> block_poodllclassroom/upgradetile}}
                    {{/checkoutexisting}}
                    {{^checkoutexisting}}
                        {{> block_poodllclassroom/newplantile}}
                    {{/checkoutexisting}}
                </div>
            {{/essentialsplans}}
        </div>
    </div>
</div>
{{^element.frozen}}
    {{#js}}
