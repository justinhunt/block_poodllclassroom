{{#subscription_check}}
<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th scope="col">{{#str}}subscription,block_poodllclassroom{{/str}}</th>
      <th scope="col" colspan=2>{{#str}}start,block_poodllclassroom{{/str}}</th>
      <th scope="col" colspan=3>{{#str}}end,block_poodllclassroom{{/str}}</th>
    </tr>
  </thead>
  <tbody>
    {{#subscriptions}}
    <tr>
      <td>{{name}}</td>
      <td colspan=2>{{start_date}}</td>
      <td colspan=3>{{end_date}}</td>
    </tr>
    {{/subscriptions}}

<tr class="thead-light">
      <th scope="col">&nbsp;</th>
      <th scope="col">{{#str}}thirty_days,block_poodllclassroom{{/str}}</th>
      <th scope="col">{{#str}}ninety_days,block_poodllclassroom{{/str}}</th>
      <th scope="col">{{#str}}oneeighty_days,block_poodllclassroom{{/str}}</th>
      <th scope="col">{{#str}}threehundredsixtyfive_days,block_poodllclassroom{{/str}}</th>
      <th scope="col">{{#str}}maxmonth,block_poodllclassroom{{/str}}</th>
</tr>

   <tr>
    <td>{{#str}}poodll_users,block_poodllclassroom{{/str}}</td>
        {{#pusers}}
            <td>{{value}}</td>
        {{/pusers}}
   </tr>

   <tr>
    <td>{{#str}}recordings,block_poodllclassroom{{/str}}</td>
        {{#record}}
            <td>{{value}}</td>
        {{/record}}
   </tr>

   <tr>
    <td>{{#str}}recording_min,block_poodllclassroom{{/str}}</td>
        {{#recordmin}}
            <td>{{value}}</td>
        {{/recordmin}}
   </tr>


   <tr>
    <td>{{#str}}per_recording_type,block_poodllclassroom{{/str}}</td>
        {{#recordtype}}
        <td style="white-space:nowrap">
             <div>
                <div style="display:inline-block; float: none;">{{#str}}video,block_poodllclassroom{{/str}}: {{video}}</div>
             </div>
             <div>
                 <div style="display:inline-block; float: none;">{{#str}}audio,block_poodllclassroom{{/str}}: {{audio}}</div>
             </div>
        </td>
        {{/recordtype}}    
   </tr>
  </tbody>
</table>
{{/subscription_check}}




