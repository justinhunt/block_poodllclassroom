<div id="block_poodllclassroom_upgradeitem_{{id}}" class="block_poodllclassroom_changeplan_cont" style="border: 1px solid black; width: 200px; padding: 15px;">
    <div class="block_poodllclassroom_planname">{{name}}</div>
    <div class="block_poodllclassroom_billinginterval">{{billingintervalname}}</div>
    <div class="block_poodllclassroom_price">{{price}}</div>
    <div class="block_poodllclassroom_maxusers">{{maxusers}} {{#str}}users, block_poodllclassroom{{/str}}</div>
    <div class="block_poodllclassroom_maxusers">{{maxcourses}} {{#str}}courses, block_poodllclassroom{{/str}} </div>
    <div class="block_poodllclassroom_description">{{description}}</div>
   <a href="#" class="btn btn-secondary block_poodllclassroom_changeplan block_poodllclassroom_flexbox {{#disabled}}disabled{{/disabled}}" {{#selected}}tabindex="-1"{{/selected}} data-planid="{{upstreamplan}}">{{#str}}changeplan, block_poodllclassroom{{/str}}</a>
    <div class="block_poodllclassroom_currentplan">{{#selected}}{{#str}}yourcurrentplan, block_poodllclassroom{{/str}}{{/selected}}</div>
    <div class="block_poodllclassroom_ineligibleplan">{{#toomanyusers}}{{#str}}toomanyusers, block_poodllclassroom, {{usercount}}{{/str}}{{/toomanyusers}}</div>
    <div class="block_poodllclassroom_ineligibleplan">{{#toomanycourses}}{{#str}}toomanycourses, block_poodllclassroom, {{coursecount}}{{/str}}{{/toomanycourses}}</div>
</div>